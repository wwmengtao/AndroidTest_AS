<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/crimson</item>
        <item name="colorPrimary">@color/royalblue</item>
        <item name="colorAccent">@color/skyblue</item>
        <item name="android:listDivider">@drawable/divider3</item><!--覆盖系统默认android:listDivider属性-->
    </style>

    <style name="MyColorStyle">
        <item name="custom_color1">@color/greenyellow</item>
    </style>

    <declare-styleable name="custom_attrs">
        <attr name="custom_color1" format="color"></attr>
        <attr name="custom_color2" format="color"></attr>
    </declare-styleable>

    <style name="BeatBoxTheam" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/darkred</item><!--colorPrimaryDark定义状态栏背景色-->
        <item name="colorPrimary">@color/red</item><!--colorPrimary定义工具栏(ActionBar所在区域)背景色-->
        <item name="colorAccent">@color/yellow</item>
        <item name="android:colorBackground">@color/royalblue</item><!--ContentView部分的背景色-->
        <item name="android:buttonStyle">@style/BeatBoxButton</item>
    </style>
    <!--以下定义Button的样式-->
    <style name="BeatBoxButton" parent="android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/button_beat_box</item>
    </style>

    <style name="BeatBoxButtonMaterial" parent="android:style/Widget.Material.Button">
        <item name="android:background">@color/pink</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
