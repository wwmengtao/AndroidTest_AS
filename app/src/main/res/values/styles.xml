<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
    </style>

    <style name="MyActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyActionBarTitleTextStyle</item>
        <item name="subtitleTextStyle">@style/MyActionBarSubTitleTextStyle</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
    </style>
    <!-- ActionBar subtitle text -->
    <style name="MyActionBarSubTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#4169E1</item>
    </style>

    <style name="MyColorStyle">
        <item name="custom_color1">@color/greenyellow</item>
    </style>

    <declare-styleable name="custom_attrs">
        <attr name="custom_color1" format="color"></attr>
        <attr name="custom_color2" format="color"></attr>
    </declare-styleable>

    <!--以下定义BeatBoxActivity对应的主题-->
    <style name="BeatBoxTheam" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/darkred</item><!--colorPrimaryDark定义状态栏背景色-->
        <item name="colorPrimary">@color/red</item><!--colorPrimary定义工具栏(ActionBar所在区域)背景色-->
        <item name="colorAccent">@color/yellow</item>
        <item name="android:colorBackground">@color/royalblue</item><!--ContentView部分的背景色-->
        <item name="android:buttonStyle">@style/BeatBoxButton</item>
    </style>
    <!--以下定义Button的样式-->
    <style name="BeatBoxButton" parent="android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/button_beat_box</item>
    </style>

    <style name="BeatBoxButtonMaterial" parent="android:style/Widget.Material.Button">
        <item name="android:background">@color/pink</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--以下定义PhotoGalleryActivity对应的主题-->
    <style name="PhotoGalleryTheam" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/darkblue</item><!--colorPrimaryDark定义状态栏背景色-->
        <item name="colorPrimary">@color/royalblue</item><!--colorPrimary定义工具栏(ActionBar所在区域)背景色-->
        <item name="colorAccent">@color/yellow</item>
        <item name="android:colorBackground">@color/white</item><!--ContentView部分的背景色-->
        <item name="android:textViewStyle">@style/TextView_PhotoGallery</item><!--TextView的显示样式-->
        <item name="android:actionBarItemBackground">@color/darkred</item><!--ActionBar中Menu(非MenuItem)的背景色-->
        <item name="textAppearanceLargePopupMenu">@style/MenuItemTextStyle</item><!--ActionBar中MenuItem的文字样式-->
    </style>

    <!--以下定义PhotoGalleryActivity对应的TextView的主题-->
    <style name="TextView_PhotoGallery">
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MenuItemTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/lightgreen</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.ProgressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>

    <!--以下定义NociceGridActivity对应的主题-->
    <style name="NoviceGridTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/darkblue</item><!--colorPrimaryDark定义状态栏背景色-->
        <item name="colorPrimary">@color/royalblue</item><!--colorPrimary定义工具栏(ActionBar所在区域)背景色-->
        <item name="android:textViewStyle">@style/TextView_NoviceTutorial</item><!--菜单文字的显示样式-->
        <item name="android:actionBarItemBackground">@color/green</item><!--ActionBar中Menu(非MenuItem)的背景色-->
        <item name="textAppearanceLargePopupMenu">@style/MenuItemTextStyle</item><!--ActionBar中MenuItem的文字样式-->
        <item name="android:textColor">@color/black</item><!--定义诸如ViewPager或者DetailActivity中显示的字体颜色-->
        <item name="android:colorBackground">@color/white</item><!--ContentView部分的背景色-->
    </style>

    <!-- 定义RecyclerView等ListView的Item中TextView的显示样式 -->
    <style name="NoviceListTextTheme" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NoviceListTextTheme2" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/font_21</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--以下定义玩家教程对应的菜单文字的显示样式-->
    <style name="TextView_NoviceTutorial">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
