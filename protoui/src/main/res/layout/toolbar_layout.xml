<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:id="@+id/user_info"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/toolbar_home"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:scaleType="fitXY"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_menu"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/user_info_iv"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/moto"
        android:layout_toEndOf="@+id/toolbar_home"
        android:layout_centerInParent="true"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <LinearLayout
        android:id="@+id/user_info_name_loc"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/user_info_iv"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/user_info_name"
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:text="Willkommen zu"/>
        <TextView
            android:id="@+id/user_info_loc"
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:text="Berlin"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/voiceassist"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/voiceassist"/>
</RelativeLayout>