<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="@color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/user_info"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/user_info_iv"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/moto"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/user_info_name_loc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/user_info_iv"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/user_info_name"
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:text="Willkommen zu"/>
            <TextView
                android:id="@+id/user_info_loc"
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:text="Berlin"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/voiceassist"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/voiceassist"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/weather_info"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/weather_info_header"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/weather_info_header_tem"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="@color/mediumturquoise"
                android:textSize="45sp"
                android:text="39 F"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>
            <ImageView
                android:id="@+id/weather_info_header_iv"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/weather_info_header_iv"
                android:background="@color/mediumturquoise"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/weather_info_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/weather_info_detail_tv1"
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:text="Mostly Cloudy"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/weather_info_detail_tv2"
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:text="Feels like 38 "
                    android:layout_alignParentStart="true"/>
            </LinearLayout>
            <TextView
                android:id="@+id/weather_info_detail_max_temp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="41F"
                android:layout_marginEnd="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:id="@+id/weather_info_detail_min_temp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="35F"
                android:layout_below="@+id/weather_info_detail_max_temp"
                android:layout_alignEnd="@id/weather_info_detail_max_temp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/time_money_info"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/time_money_info_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/time_money_info_time_loctime"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:text="Local Time"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/time_money_info_time_detailtime"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:text="2:10PM"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:id="@+id/time_money_info_time_tips"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="7 hours ahead of Chicago"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <RelativeLayout
            android:id="@+id/time_money_info_money"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/time_money_info_money_one"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="1$ equals"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/time_money_info_money_another"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="人民币 6.9"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/suggestedapps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:paddingTop="10dp"
            android:text="Suggested apps">
        </TextView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/suggestedappsrv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="10dp"/>
    </LinearLayout>
</LinearLayout>
