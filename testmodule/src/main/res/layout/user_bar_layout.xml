<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/user_info"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageButton
        android:id="@+id/main_btn_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="10dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_menu"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_info_iv"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/moto"
        android:layout_toEndOf="@+id/main_btn_menu"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/user_info_name_loc"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/user_info_iv"
        android:orientation="vertical">
        <TextView
            android:id="@+id/user_info_loc"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:text="For"/>
        <TextView
            android:id="@+id/user_info_name"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:gravity="start|center_vertical"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:singleLine="true"
            android:text="M.T"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_info_from"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/user_info_name_loc"
        android:orientation="vertical">
        <TextView
            android:id="@+id/user_info_from_from"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:text="From"/>
        <TextView
            android:id="@+id/user_info_from_place"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:gravity="start|center_vertical"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:text="Nanjing"/>
    </LinearLayout>
</RelativeLayout>