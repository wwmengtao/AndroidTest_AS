<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:id="@+id/logo_title"
            android:layout_height="15dp"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/logo"
                android:layout_height="match_parent"
                android:layout_width="15dp"
                android:background="@color/royalblue"
                android:scaleType="fitXY"
                android:src="@drawable/moto2"/>

            <TextView
                android:id="@+id/title"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="2dp"
                android:singleLine="true"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textAppearance="@style/MyNotificationHeaderText"
                android:text="title"/>
        </LinearLayout>


        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/logo_title"
            android:layout_below="@+id/logo_title"
            android:layout_marginTop="2dp"
            android:gravity="start|center_vertical"
            android:text="title2" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/logo_title"
            android:layout_below="@+id/title2"
            android:layout_marginTop="2dp"
            android:text="text"
            android:gravity="start|center_vertical"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/mytextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/title2"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/logo_title"
            android:layout_marginEnd="10dp"
            android:text="mytextview" />

        <!--<Switch-->
        <!--android:id="@+id/myswitch"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:duplicateParentState="true" />-->
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/black">
        <TextView
            android:id="@+id/moredetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="MORE DETAILS"
            android:gravity="start|center_vertical"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>